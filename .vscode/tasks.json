{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Next.js dev server",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": {
        "owner": "nextjs-dev",
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "starting server...",
          "endsPattern": "started server on"
        }
      },
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
